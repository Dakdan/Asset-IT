<!DOCTYPE html>
<html lang="th">
<head>
<meta charset="UTF-8">
<title>เปลี่ยนรหัสผ่าน</title>
<link rel="stylesheet" href="./css/style.css">
</head>

<body class="login-page">
<div class="login-wrapper">
  <div class="login-card">
    <h2>เปลี่ยนรหัสผ่านครั้งแรก</h2>

    <input id="newpw" type="password" placeholder="รหัสใหม่">
    <button class="btn-login" onclick="changePW()">บันทึก</button>
    <p id="msg"></p>
  </div>
</div>

<script>
const GAS_URL = 'YOUR_GAS_URL';
const user = localStorage.getItem('tmpUser');

function jsonp(url, cb){
  const s=document.createElement('script');
  s.src=url+'&callback='+cb;
  document.body.appendChild(s);
  setTimeout(()=>s.remove(),3000);
}

function changePW(){
  jsonp(
    GAS_URL +
    '?action=changePassword' +
    '&user=' + encodeURIComponent(user) +
    '&newpw=' + encodeURIComponent(newpw.value),
    'cb'
  );
}

function cb(res){
  if(res.success){
    localStorage.removeItem('tmpUser');
    location.href='login.html';
  }else{
    msg.innerText='เปลี่ยนรหัสไม่สำเร็จ';
  }
}
</script>
</body>
</html>
