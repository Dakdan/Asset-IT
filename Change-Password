<!DOCTYPE html>
<html lang="th">
<head>
<meta charset="UTF-8">
<title>เปลี่ยนรหัสผ่าน</title>
<link rel="stylesheet" href="./css/style.css">
</head>
<body class="login-page">

<div class="login-wrapper">
  <div class="login-card">
    <h2>เปลี่ยนรหัสผ่านครั้งแรก</h2>
    <input id="newpw" type="password" placeholder="รหัสผ่านใหม่">
    <button onclick="change()">บันทึก</button>
  </div>
</div>

<script>
function change(){
  jsonp(
    GAS_URL +
    '?action=changePassword' +
    '&user=' + localStorage.getItem('tmpUser') +
    '&newpw=' + newpw.value,
    'done'
  );
}

function done(res){
  if(res.success){
    alert('เปลี่ยนรหัสผ่านแล้ว');
    location.href='login.html';
  }
}
</script>
</body>
</html>
